{
	"name": "infinityloop-dev/coding-standard",
	"description": "Inifnityloop PHPCS coding standard",
	"type": "phpcodesniffer-standard",
	"license": "MIT",
	"minimum-stability": "dev",
	"prefer-stable": true,
	"require": {
		"php": "^7.4",
		"squizlabs/php_codesniffer": "~3.5.3",
		"slevomat/coding-standard": "~6.3.8"
	},
	"require-dev": {
		"bamarni/composer-bin-plugin": "^1.2",
	},
	"scripts": {
		"codestyle": "phpcs --standard=vendor-bin/phpcs/infinityloop-dev/coding-standard/InfinityloopCodingStandard/ruleset.xml --extensions=php InfinityloopCodingStandard"
	},
	"autoload": {
		"psr-4": {
			"InfinityloopCodingStandard\\": "InfinityloopCodingStandard"
		}
	}
}
